<html>
    <style>
        button {
            padding: 10px;
            font-size: 1.1em;
            background: white;
            color: black;
            border: none;
            border-radius: 10px;
            border: 1px solid rgba(0, 0, 0, 0.2);
            cursor: pointer;
        }
        .active {
            background:#32bacf;
        }
        .hidden {
            display: none;
        }
        .block {
            width: 320px;
            padding: 10px;
            border: 5px solid gray;
            margin: 0;
        }
    </style>
        <div id="inputGroup">
            <div id="input0" class="block">Tin Aresole Cans</div>
            <div id="input1" class="block">Alluminum Cans</div>
            <div id="input2" class="block">Aresole Valves</div>
            <div id="input3" class="block">Aresole Actuators</div>
        </div>
    <div id = "slide0">
        <div>First Slide</div>
    </div>
    <div id = "slide1" class='hidden'>
        <div>Second Slide</div>
    </div>
    <div id = "slide2" class='hidden'>
        <div>Third Slide</div>
    </div>
    <div id = "slide3" class='hidden'>
        <div>Fourth Slide</div>
    </div>
    
    <script>
        
        const inputGroup = document.getElementById("inputGroup"); 
        
        var startinginput = document.getElementById('input0');
        startinginput.classList.add('active');
        
        let prevInput = startinginput;
        
        const inputPressed = (e) => {
            if(e.target.nodeName === 'DIV') {
                e.target.classList.add('active'); 
                if(prevInput !== null) {
                    prevInput.classList.remove('active');  
                    removeInformation(prevInput);
                }
                prevInput = e.target;
                displayInformation(e.target);
            }
        }
        const removeInformation = (e) => {
            var index = e.id.split('').pop();
            var refereceData = 'slide' + index;
            var slide = document.getElementById(refereceData);
            slide.classList.add('hidden');
        }
        const displayInformation = (e) => {
            var index = e.id.split('').pop();
            var refereceData = 'slide' + index;
            var slide = document.getElementById(refereceData);
            slide.classList.remove('hidden');
        }
        
        
        inputGroup.addEventListener('click', inputPressed);
    </script>
</html>
